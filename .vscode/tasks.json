{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build example",
            "type": "shell",
            "command": "mbed-tools",
            "args": [
                "compile",
                "-m",
                "K64F",
                "-t",
                "GCC_ARM",
                "-c"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "/home/vscode/gcc-arm-none-eabi-9-2019-q4-major/bin:${env:PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
  }
